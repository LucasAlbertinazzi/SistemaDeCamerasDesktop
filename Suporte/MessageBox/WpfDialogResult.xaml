<Window
    x:Class="SistCamerasGuarita.Suporte.MessageBox.WpfDialogResult"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SistCamerasGuarita.Suporte.MessageBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WpfDialogResult"
    Width="420"
    Height="280"
    AllowsTransparency="True"
    Background="Transparent"
    Loaded="Window_Loaded"
    Style="{StaticResource PropriedadesTela}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Background="Transparent">
        <Border
            Name="grid1ao3"
            Padding="24"
            Background="#070a24"
            BorderBrush="White"
            BorderThickness="1"
            ClipToBounds="True"
            CornerRadius="6"
            Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="txbPergunta"
                    Grid.Row="0"
                    Margin="0,0,0,12"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    FontFamily="Roboto"
                    FontSize="18"
                    FontWeight="Medium"
                    Foreground="#fff"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    Visibility="Collapsed" />

                <Grid
                    x:Name="gridPergunta"
                    Grid.Row="1"
                    Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnSim"
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="btnSim_Click"
                        Content="SIM"
                        Style="{StaticResource BtnPadrao}" />
                    <Button
                        x:Name="btnNao"
                        Grid.Column="1"
                        Margin="12,0,0,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="btnNao_Click"
                        Content="NÃO"
                        Style="{StaticResource BtnPadrao}" />
                </Grid>

                <Grid
                    x:Name="gridAviso"
                    Grid.Row="1"
                    Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnOk"
                        Grid.Column="0"
                        Margin="80,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="btnOk_Click"
                        Content="OK"
                        Style="{StaticResource BtnPadrao}" />
                </Grid>

                <Grid
                    x:Name="gridOpcao"
                    Grid.Row="1"
                    Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        x:Name="btnUm"
                        Grid.Column="0"
                        Margin="0,0,12,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="btnUm_Click"
                        Style="{StaticResource BtnPadrao}" />
                    <Button
                        x:Name="btnDois"
                        Grid.Column="1"
                        Margin="12,0,0,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="btnDois_Click"
                        Style="{StaticResource BtnPadrao}" />
                </Grid>
            </Grid>
        </Border>
        <Border
            Name="grid4"
            Padding="12"
            Background="#070a24"
            BorderBrush="White"
            BorderThickness="1"
            ClipToBounds="True"
            CornerRadius="6"
            Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="txbTextoObs"
                    Grid.Row="0"
                    Margin="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    FontFamily="Roboto"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="#fff"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBox
                    Name="txbObs"
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    Padding="5"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    BorderBrush="#FF053624"
                    ClipToBounds="True"
                    FontSize="14"
                    HorizontalScrollBarVisibility="Disabled"
                    MaxLength="300"
                    SelectionChanged="txbObs_SelectionChanged"
                    Style="{StaticResource Estilo_Placeholder_White}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Hidden" />
                <Label
                    Name="lblMarcaObs"
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Digite uma observação..."
                    FontFamily="Roboto"
                    FontSize="14"
                    FontWeight="Medium"
                    Foreground="#adadad" />
                <Border Grid.Row="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="* O campo de observação PODE ser vázio."
                            FontFamily="Roboto"
                            FontSize="10"
                            FontWeight="Medium"
                            Foreground="White" />
                        <Button
                            x:Name="btnObs"
                            Grid.Column="1"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Click="btnObs_Click"
                            Content="Continuar"
                            Style="{StaticResource BtnPadrao}" />
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
